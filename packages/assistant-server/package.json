		"web-push": "^3.6.7",
		"ws": "^8.18.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^22.0.0",
		"@types/web-push": "^3.6.4",
		"@types/ws": "^8.5.10",
		"typescript": "^5.7.3"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"files": [
		"dist",
		"README.md"
