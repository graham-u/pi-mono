{
	"name": "@mariozechner/pi-assistant-server",
	"version": "0.52.8",
	"description": "WebSocket server wrapping the pi-coding-agent SDK for the assistant frontend",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"bin": {
		"pi-assistant-server": "./dist/cli.js"
	},
	"scripts": {
		"clean": "rm -rf dist",
		"build": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
		"start": "node dist/cli.js"
	},
	"dependencies": {
		"@mariozechner/pi-agent-core": "file:../agent",
